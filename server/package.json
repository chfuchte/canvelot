{
    "name": "canvelot-server",
    "private": true,
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "start": "node dist/index.js",
        "start-env": "node --env-file-if-exists=.env dist/index.js",
        "build": "esbuild src/index.ts --bundle --platform=node --format=esm --target=node18 --outdir=dist --packages=external",
        "build-tsc": "tsc",
        "typecheck": "tsc --noEmit",
        "format": "prettier --write ."
    },
    "dependencies": {
        "better-auth": "^1.4.18",
        "cors": "^2.8.6",
        "express": "^5.2.1",
        "mongodb": "^7.0.0",
        "zod": "^4.3.6"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/node": "^24.10.1",
        "esbuild": "^0.27.3",
        "typescript": "^5.9.3"
    }
}
