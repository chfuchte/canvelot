{
    "compilerOptions": {
        "target": "ES2023",
        "lib": ["ES2023"],
        "module": "nodenext",
        "types": ["node"],
        "skipLibCheck": true,
        "moduleResolution": "nodenext",
        "verbatimModuleSyntax": true,
        "moduleDetection": "force",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "rootDir": "src",
        "outDir": "dist"
    },
    "include": ["src"]
}
